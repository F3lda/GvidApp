<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/obedDay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="-1dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:paddingEnd="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="3dp"
            android:paddingStart="20dp"
            android:text="Jídelníček na"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorJidelna2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/obedDayDay"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingEnd="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp"
            android:text="Středa"
            android:textColor="@color/colorJidelnicek4"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingEnd="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingStart="3dp"
            android:text="-"
            android:textColor="@color/colorJidelna2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/obedDayDate"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingEnd="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp"
            android:text="17.05.2017"
            android:textColor="@color/colorJidelnicek4"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/obedZakazano"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="-1dp"
        android:layout_marginTop="-1dp"
        android:background="@drawable/listview_item_order_zakazane"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/obedZakazanoType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingEnd="3dp"
            android:paddingLeft="30dp"
            android:paddingRight="3dp"
            android:paddingStart="30dp"
            android:text="Oběd 1"
            android:textAlignment="center"
            android:textColor="@color/colorJidelna4"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingEnd="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingStart="3dp"
            android:text="--"
            android:textAlignment="center"
            android:textColor="@color/colorJidelna2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/obedZakazanoStatus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:paddingEnd="20dp"
            android:paddingLeft="3dp"
            android:paddingRight="20dp"
            android:paddingStart="3dp"
            android:text="nelze objednat"
            android:textAlignment="center"
            android:textColor="@color/colorJidelna2"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/obedZakazanoObjednano"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="-1dp"
        android:layout_marginTop="-1dp"
        android:background="@drawable/listview_item_order_zakazane"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/obedZakazanoObjednanoType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingEnd="3dp"
            android:paddingLeft="30dp"
            android:paddingRight="3dp"
            android:paddingStart="30dp"
            android:text="Oběd 1"
            android:textAlignment="center"
            android:textColor="@color/colorJidelna4"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingEnd="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingStart="3dp"
            android:text="--"
            android:textAlignment="center"
            android:textColor="@color/colorJidelna2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/obedZakazanoObjednanoStatus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:paddingEnd="20dp"
            android:paddingLeft="3dp"
            android:paddingRight="20dp"
            android:paddingStart="3dp"
            android:text="nelze zrušit"
            android:textAlignment="center"
            android:textColor="@color/colorJidelna2"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_selected_obed" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/obedObjednano"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="-1dp"
        android:layout_marginTop="-1dp"
        android:background="@drawable/listview_item_order_objednane"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/obedObjednanoType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingEnd="3dp"
            android:paddingLeft="30dp"
            android:paddingRight="3dp"
            android:paddingStart="30dp"
            android:text="Oběd 1"
            android:textAlignment="center"
            android:textColor="@color/colorJidelna4"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingEnd="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingStart="3dp"
            android:text="--"
            android:textAlignment="center"
            android:textColor="@color/colorJidelna2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/obedObjednanoStatus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:paddingEnd="20dp"
            android:paddingLeft="3dp"
            android:paddingRight="20dp"
            android:paddingStart="3dp"
            android:text="zrušit"
            android:textAlignment="center"
            android:textColor="@color/colorJidelna2"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_selected_obed" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/obedObjednat"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="-1dp"
        android:layout_marginTop="-1dp"
        android:background="@drawable/listview_item_order_objednat"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/obedObjednatType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingEnd="3dp"
            android:paddingLeft="30dp"
            android:paddingRight="3dp"
            android:paddingStart="30dp"
            android:text="Oběd 1"
            android:textAlignment="center"
            android:textColor="@color/colorJidelna4"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingEnd="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingStart="3dp"
            android:text="--"
            android:textAlignment="center"
            android:textColor="@color/colorJidelna2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/obedObjednatStatus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:paddingEnd="20dp"
            android:paddingLeft="3dp"
            android:paddingRight="20dp"
            android:paddingStart="3dp"
            android:text="objednat/přeobjednat"
            android:textAlignment="center"
            android:textColor="@color/colorJidelna2"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/obedPopis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="10dp"
        android:text="Polévka hovězí s drožďovými knedlíčky , Džus;Mexické fazole , chléb , Ovoce "
        android:textColor="@color/colorObjednavaniText"
        android:textSize="14sp" />


</LinearLayout>