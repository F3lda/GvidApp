<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="10dp" android:color="@color/colorJidelnicek" />
            <solid android:color="@color/colorJidelnicek2" />
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"/>
        </shape>
    </item>

    <item android:bottom="10dp" android:left="10dp" android:right="10dp">
        <shape android:shape="rectangle">
            <stroke android:width="10dp" android:color="@color/colorJidelnicek2"/>
            <solid android:color="@color/colorJidelnicek2" />
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"/>
        </shape>
    </item>

</layer-list>